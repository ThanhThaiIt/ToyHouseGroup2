<%- include('layout/header') %>

<div class="container">
    <div class="row">
        <div class="container">
            <div class="row">
                <div class="col-lg-6 mx-auto mt-4">
                    <div class="card shadow">
                        <div class="card-header bg-primary">
                            <h5 class="text-light">Add New Product</h5>
                        </div>
                        <div class="card-body p-4">
                            <form action="/add" method="post" id="add-form" enctype="multipart/form-data">
                                <div class="mb-3">
                                    <label for="name">Product Name</label>
                                    <input type="text" name="name" class="form-control form-control-lg" placeholder="Enter Name" required/>
                                </div>
                                <!-- <div class="mb-3">
                                    <label for="description">Description</label>
                                    <input type="text" name="description" class="form-control form-control-lg" placeholder="Enter Description" required/>
                                </div> -->
                                
                                <div class="mb-3">
                                    <label for="description">Description</label>
                                    <textarea name="description" class="form-control form-control-lg" placeholder="Enter Description" rows="5" required></textarea>
                                </div>
                                
                                <div class="mb-3">
                                    <label for="phone">Price</label>
                                    <input type="tel" name="price" class="form-control form-control-lg" placeholder="Enter Price" required/>
                                </div>
                                <div class="mb-3">
                                    <label for="image" class="form-label">Select Image</label>
                                    <input type="file" name="image" class="form-control form-control-lg" required/>
                                </div>
                                <div class="mb-3 d-grid">
                                    <input type="submit" name="submit" value="Add Product" class="btn btn-primary btn-lg" />
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>

    </div>


</div>

<%- include('layout/footer') %>